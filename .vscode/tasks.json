{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "deploy",
            "type": "shell",
            "command": "flutter clean && flutter build web && git add . && git commit -m \"${input:message}\" && git push",
            "problemMatcher": [],
        }
    ],
    "inputs": [
        {
            "id": "message",
            "default": "github pages deployment",
            "type": "promptString",
            "description": "git commit message",
        },
    ]
}